<p id="notice"><%= notice %></p>

<h1 style="text-align: center; background-color: white; margin: 0 auto; width: 17%; border-radius: 8px;">Clubber list :</h1>
<br>
<table class="table table-striped table-dark" style="margin: 0 auto; width: 50%;">
  <thead  class="thead-dark">
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  class="thead-dark">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, style:"color: green;" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), style:"color: orange;" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, style:"color: red;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="text-align: center;">
  <%= link_to "New User", new_user_url, class: "bg-light btn btn-treehouse", style: "color: black; margin: 0 auto;"%>
</p>

<p style="text-align: center;">
  <%= link_to "Back", root_url, class: "bg-light btn btn-treehouse", style: "color: black; margin: 0 auto;"%>
</p>